@model Emp_Intranet_UI.Models.DisplayModels.HomeDisplayModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>LeaveModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayFor(model => model.MyLeaves.Leave_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MyLeaves.Leave_Reason)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MyLeaves.Leave_StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MyLeaves.Leave_EndDate)
        </dd>

    </dl>

    @using (Html.BeginForm("ConfirmDeleteLeave", "Home", new { id = Model.MyLeaves.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
   
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
